    <actions>
        <action id="com.fred.scalingdoodle.MyPluginAction"
                class="com.fred.scalingdoodle.MyPluginAction"
                text="Hello from Scaling Doodle"
                description="Shows a greeting message">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
